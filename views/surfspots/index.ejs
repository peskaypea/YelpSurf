<% layout('layouts/boilerplate') %>

<body>
    <h1>All Surf Spots</h1>
    <div>
        <a href="/surfspots/new">Add Surf Spot</a>
    </div>
    <ul>
        <% for (let surfspot of surfspots) { %>
            <div class="card" mb3> 
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%=surfspot.image%>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= surfspot.location %> </h5>
                            <p class="card-text"> <%=surfspot.description%></p>
                            <p class="card-text"> 
                                <small class="text-muted"><%= surfspot.size %> </small>
                                <small class="text-muted"><%= surfspot.tide %> tide </small>
                            </p>
                            <a class="btn btn-primary" href="/surfspots/<%=surfspot._id%>">View <%=surfspot.location %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
   

</body>

