<% layout('layouts/boilerplate') %>
<body>
    <h1 class="text-center">
        Edit Campground
    </h1>
    <div class="col-6 offset-3">
        <form action="/surfspots/<%=surfspot._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="location" name="surfspot[location]"  value="<%=surfspot.location %>">
            </div>
            <div>
                <label for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="surfspot[image]"  value="<%=surfspot.image %>">
            </div>
            <div class="mb-3">
                <label for="size">Size</label>
                <input class="form-control" type="text" id="size" name="surfspot[size]"  value="<%=surfspot.size %>">
            </div>
            <div class="mb-3">
                <label for="tide">Tide</label>
                <input class="form-control" type="text" id="tide" name="surfspot[tide]"  value="<%=surfspot.tide %>">
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <input class="form-control" type="text" id="description" name="surfspot[description]"  value="<%=surfspot.description %>">
            </div>
            <button class="btn btn-success">Update Surf Spot</button>
        </form>
        <a href="/surfspots/<%= surfspot._id%>">Back To surfspot</a>
    </div>
    </div>

</body>


